                     }
                     else if (json.statusCode === 500) {
                         toastr["error"](json.message, "Sunucu tabanlı hata")
                     }
                     return json.data;
                 },
                 error: function (xhr, ajaxOptions, thrownError) {
                     toastr["error"]("Sunucuda hata oluştu.", "İletişim Hatası !")
                 }
             });
         }
         else {
